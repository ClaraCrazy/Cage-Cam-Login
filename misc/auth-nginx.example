server {
        listen 443 ssl;
        include snippets/snakeoil.conf;
        server_name cage.cam;

        root /var/www/auth-page/;

        location / {
                root /var/www/auth-page;
                index login.html;
        }

        location /auth {
                proxy_pass http://localhost:3000;
                proxy_http_version 1.1;
                    proxy_set_header Upgrade $http_upgrade;
                    proxy_set_header Connection "upgrade";
        }

        location /stream {
                proxy_pass http://localhost:3000;
                proxy_http_version 1.1;
                    proxy_set_header Upgrade $http_upgrade;
                    proxy_set_header Connection "upgrade";
        }
}
